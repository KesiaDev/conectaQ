// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AdminUser {
  id            String   @id @default(cuid())
  username      String   @unique
  password_hash String
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@map("admin_users")
}

model People {
  id                String   @id @default(cuid())
  nome_completo     String
  cpf               String?  // hash + último dígito opcional
  data_nascimento   DateTime?
  telefone          String
  email             String?
  cep               String?
  logradouro        String?
  bairro            String?
  cidade            String?
  uf                String?
  ja_batizado       String?  // "sim" ou "nao"
  denominacao       String?  // denominação se batizado
  consent_lgpd_at   DateTime?
  canal_origem      String?  // QR-19h, recepção-A
  created_at        DateTime @default(now())
  
  visits            Visit[]
  people_tags       PeopleTag[]
  events            Event[]
  
  @@map("people")
}

model Visit {
  id          String   @id @default(cuid())
  person_id   String
  data_visita DateTime
  culto_id    String?
  status      String   @default("novo") // novo, em_acompanhamento, integrado
  created_at  DateTime @default(now())
  
  person      People   @relation(fields: [person_id], references: [id], onDelete: Cascade)
  
  @@map("visits")
}

model Tag {
  id         String      @id @default(cuid())
  nome       String      // ex.: "novo convertido", "casado", "bairro-centro"
  created_at DateTime    @default(now())
  
  people_tags PeopleTag[]
  
  @@map("tags")
}

model PeopleTag {
  person_id String
  tag_id    String
  created_at DateTime @default(now())
  
  person    People    @relation(fields: [person_id], references: [id], onDelete: Cascade)
  tag       Tag       @relation(fields: [tag_id], references: [id], onDelete: Cascade)
  
  @@id([person_id, tag_id])
  @@map("people_tags")
}

model Campaign {
  id           String   @id @default(cuid())
  nome         String
  canal        String   // whatsapp/email/sms
  segmento_sql String?  // query salva
  status       String   @default("draft")
  created_at   DateTime @default(now())
  
  @@map("campaigns")
}

model Event {
  id        String   @id @default(cuid())
  person_id String?
  tipo      String   // clique_ig, join_whatsapp, form_abandon
  payload   String?  // JSON
  created_at DateTime @default(now())
  
  person    People?  @relation(fields: [person_id], references: [id], onDelete: SetNull)
  
  @@map("events")
}
